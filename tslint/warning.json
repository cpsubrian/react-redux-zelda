{
  "defaultSeverity": "warn",
  "rules": {
    "no-internal-module": true,
    "prefer-for-of": true,

    "curly": true,
    "label-position": true,
    "no-arg": true,
    "no-console": false,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-invalid-this": true,
    "no-switch-case-fall-through": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "radix": true,
    "triple-equals": [true, "allow-null-check"],
    "use-isnan": true,

    "no-default-export": true,
    "no-export-equals": true,
    "no-import-equals-require": true,

    "class-name": true,
    "jsdoc-format": true,
    "no-angle-bracket-type-assertion": true,

    "no-focused-tests": true,
    "no-set-timeout-in-tests": true,
    "no-constant-condition": true,
    "no-document-write": true,
    "no-duplicate-switch-case": true,
    "no-empty-interface": true,
    "no-invalid-regexp": true,
    "no-unnecessary-class": true,
    "no-string-based-set-interval": true,
    "no-string-based-set-timeout": true,
    "no-unnecessary-bind": true,
    "no-unnecessary-field-initialization": true,
    "no-unnecessary-local-variable": true,
    "no-unnecessary-override": true,
    "no-this-assignment": [true, {"allow-destructuring": true}],
    "no-with-statement": true,
    "non-literal-require": true,
    "react-a11y-aria-unsupported-elements": true,
    "react-a11y-props": true,
    "react-a11y-proptypes": true,
    "react-a11y-role-has-required-aria-props": true,
    "react-a11y-role-supports-aria-props": true,
    "react-a11y-role": true,
    "react-a11y-tabindex-no-positive": true,
    "react-anchor-blank-noopener": true,
    "react-no-dangerous-html": true,
    "react-this-binding-issue": true,
    "react-unused-props-and-state": true,

    "a11y-click": true,
    "a11y-content": true,
    "a11y-image": true,
    "a11y-labelled-input": true,
    "curly-quotes-in-i18n": true,
    "i18n-trim-whitespace": true,
    "invalid-i18n-project": true,
    "invalid-placeholder-name": true,
    "misspelled-dropbox": true,
    "no-amd-dependency": true,
    "no-declare-global": true,
    "no-deprecated-class": true,
    "no-i18n-qualified-usage": true,
    "no-legacy-imports-in-clean": true,
    "no-printf-placeholder": true,
    "no-window-assignment": true,
    "prefer-const-enum": true,
    "react-es6-classes": true,
    "react-did-unmount": true,
    "trademark-business": true
  },

  "rulesDirectory": ["./tslint_rules"]
}
